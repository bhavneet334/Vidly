<!-- title -->
<div class="card-item">
    <label for="title"> Title</label>
    <input type="text" name="title" value="<%= book.title %>">    
</div>

<!-- author -->
<div class="card-item">
    <label for="author"> Author</label>
    <select name="author" id="author">
    <% authors.forEach(author => { %>
        <% if(author.id === book.author) { %>
            <option selected label="<%=author.name%>" value="<%=author.id%>" >
        <% } else { %>
            <option label="<%=author.name%>" value="<%= author.id%>" >
        <% } %>
    <% }) %>
    </select>
</div>

<!-- Publish date -->
<div class="card-item">
    <label> Publish Date</label>
    <input type="date" name="publishDate" 
            value="<%= book.publishDate == null? '' : 
            book.publishDate.toISOString().split('T')[0]%> ">
</div>

<!-- page count -->
<div class="card-item">
    <label for="pageCount"> Page Count </label>
    <input type="number" name="pageCount" min="1" value="<%=book.pageCount%> ">
</div>


<div class="cover-and-desc-container">

    <!-- cover image -->
    <div class="card-item vertical-display cover-drop">
        <label for="coverImage">Cover:</label>
        <input type="file" id="coverImage" name="coverImage" class="filepond" />
    </div>

    <!-- description -->
    <div class="card-item vertical-display">
        <label for="description"> Description </label>
        <textarea type="text" name="description" id="description"><%=book.description%></textarea>
    </div>
</div>